<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;netstandard2.1</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>12</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>0.1.1</Version>
        <Title>Buffering</Title>
        <Description>Efficiently streamlined buffering functionality for any system</Description>
        <Copyright>MIT</Copyright>
        <RepositoryUrl>https://github.com/Grovre/Buffering</RepositoryUrl>
        <RepositoryType>Github</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        
        <PackageReleaseNotes>
            Added a back buffer controller and a front buffer reader.
            Unexpectedly increased performance by more than 30%
        </PackageReleaseNotes>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="$(SolutionDir)README.md" Pack="true" PackagePath="\" />
    </ItemGroup>
    
    <ItemGroup>
      <Folder Include="SingleBuffering\" />
    </ItemGroup>

</Project>
